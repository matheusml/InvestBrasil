<%= form_for company do |f| %>
  <% if company.errors.any? %>
    <div class="error_messages">
      <ul>
        <% for message in company.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :nome %>
  <%= f.text_field :name, :class => 'default' %>

  <div>       
    <%= f.submit :class => 'btblue btlarge', :value => "Salvar" %>
  </div>

<% end %>

